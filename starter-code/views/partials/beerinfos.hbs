<div class="beer-box">
  <img class="beer-img" src="{{beer.image_url}}" alt="beer image">
  <article class="beer-detail">
    <h3>{{beer.name}}</h3>
    <p>{{beer.description}}</p>
    <h4>{{beer.tagline}}</h4>
    <h5>Food pairing</h5>
    <ul>
    {{#each beer.food_pairing}}
      <li>{{this}}</li>
    {{/each}}
    </ul>
    <p><span>Brewer's tip:</span> {{beer.brewers_tips}}</p>
  </article>
</div>